<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/afternoon"
    tools:context="com.androidbelieve.startagain.AccountUser">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tell us about your morning routine so that we can better understand your habits."
        android:id="@+id/textView6"
        android:layout_marginTop="36dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:id="@+id/welcome_start"
        android:onClick="welcome_start"
        android:background="@color/orange"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/bt_StartDay"
        android:layout_alignEnd="@+id/bt_StartDay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="When do you wake up?"
        android:id="@+id/text_WakeUp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="When do you start your day?"
        android:id="@+id/text_StartDay"
        android:layout_below="@+id/bt_WakeUp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <EditText
        android:id="@+id/bt_WakeUp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:hint="@string/select_time_WakeUp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textAlignment="gravity"

        android:layout_below="@+id/text_WakeUp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/bt_StartDay"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:hint="@string/select_time_startDay"
        android:textColor="@color/black"
        android:textColorHint="@color/black"

        android:layout_marginTop="26dp"

        android:clickable="false"
        android:outlineProvider="background"
        android:layout_below="@+id/text_StartDay"
        android:layout_alignLeft="@+id/bt_WakeUp"
        android:layout_alignStart="@+id/bt_WakeUp" />

</RelativeLayout>
